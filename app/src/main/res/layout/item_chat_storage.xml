<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@color/notYellow"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/content_chat_storage"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/baseline_account_circle_24"
        android:id="@+id/icon_chat_storage"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/author_chat_storage"
        app:layout_constraintStart_toEndOf="@id/icon_chat_storage"
        android:textSize="25sp"
        android:textColor="@color/White"
        android:textFontWeight="500"
        android:fontFamily="sans-serif"
        android:text="Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/content_chat_storage"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/author_chat_storage"
        android:textSize="20sp"
        android:textColor="@color/White"
        android:textFontWeight="500"
        android:fontFamily="sans-serif"
        android:text="Hello, how is going today?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/Black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/time_chat_storage"
        android:text="20/12/2022 7:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>